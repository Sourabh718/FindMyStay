<header class="bg-red-500 text-white p-4 shadow-md">
  <nav class="container mx-auto flex justify-between items-center">
    <ul class="flex space-x-4">
      <li>
        <a
          href="/"
          class="hover:bg-red-400 py-2 px-4 rounded transition duration-300"
          >AirBnb</a
        >
      </li>
      <% if(isLoggedIn){ %>
        <li>
          <a
            href="/home-list"
            class="hover:bg-red-400 py-2 px-4 rounded transition duration-300"
            >Home List</a
          >
        </li>
        <li>
          <a
            href="/host/add-home"
            class="hover:bg-red-400 py-2 px-4 rounded transition duration-300"
            >Add Home</a
          >
        </li>
        <li>
        <a
            href="/booking"
            class="hover:bg-red-400 py-2 px-4 rounded transition duration-300"
            >Booking</a
          >
        </li>
        <li>
        <a
            href="/watchlist"
            class="hover:bg-red-400 py-2 px-4 rounded transition duration-300"
            >Favourites</a
          >
        </li>
        <li>
          <a
            href="/host/home-list"
            class="hover:bg-red-400 py-2 px-4 rounded transition duration-300"
            >Host Home</a
          >
        </li>
      <% }%>
      <li>
        <% if(!isLoggedIn){ %>
          <a href="/login" class="hover:bg-red-400 py-2 px-4 rounded transition duration-300"
        >Login</a>
          <a href="/signup" class="hover:bg-red-400 py-2 px-4 rounded transition duration-300"
        >Signup</a>
        <% }else{ %>
          <form action="/logout" method="post">
            <button>Logout</button>
          </form>
        <% } %>
      </li>
    </ul>
  </nav>
 </header> 

