<%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto mt-8 p-8 bg-white rounded-lg shadow-md">
        <h1 class="text-3xl font-bold text-red-500 mb-4">signup</h1>
        <form action="" method="POST">
        <input type="text" name="username" placeholder="Enter your Name" 
        class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"/>
    
        <input type="email" name="email" placeholder="Enter your Email"
        class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"/>
        <input type="password" name="password" placeholder="create a password" 
        class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"/>
        <input type="password" name="confirmPassword" placeholder="confirm your password" 
        class="w-full px-4 py-2 mb-4 border rounded-md focus:outline-none focus:ring-2 focus:ring-red-500"/>
        <div>
            <p>User Type</p>
            <label for="user"><input type="radio" name="user" id="user">User</label>
            <label><input type="radio" name="host" id="host">Host</label>
        </div>
        <input type="checkbox" name="terms"><p>accept term and condition</p>
        <input type="submit" value="Signup" class="w-full bg-red-500 text-white py-2 rounded-md hover:bg-red-600 transition duration-300" />
        </form>
    </main>
</body>
</html>